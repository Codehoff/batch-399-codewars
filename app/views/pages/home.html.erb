<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1547954575-855750c57bd3?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80)">
  <div class="banner-content">
    <h1>Batch 399 vs Codewars</h1>
    <button class="p-2" style="background:#2FB45A; color:white;border:none;border-radius:5px;" onClick="document.getElementById('clan-table').scrollIntoView();">
    See our leaderboard
    </button>
  </div>
</div>
<div>
<table id=clan-table class="table table-dark table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Username</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Rank</th>
      <th scope="col">Score</th>
      <th scope="col">Honor</th>
    </tr>
  </thead>
  <tbody>
    <% i = 1 %>
      <% Member.all.order("score DESC").each do |member| %>
          <tr>
            <th scope="row"><%= i %></th>         
            <td><a href="/members/<%=member.id%>"><%=member.username.gsub("%20", " ") %></a></td>
            <td><%=member.first_name%></td>
            <td><%=member.last_name %></td>
            <td><%=member.rank %></td>
            <td><%=member.score %></td>
            <td><%=member.honor %></td>
          </tr>
      <% i += 1 %>
    <% end %>
  </tbody>
</table>
</div>